<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="458.0" prefWidth="531.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.FXMainController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="5.0" prefHeight="453.0" prefWidth="371.0" spacing="5.0">
            <children>
                <Label text="Processes">
                    <tooltip>
                        <Tooltip text="(Burst Time, Delay Time, Priority, Level) or for random input type &quot;Random #process&quot;" />
                    </tooltip>
                </Label>
                <TextArea fx:id="input" prefHeight="422.0" prefWidth="371.0" />
                <Label fx:id="status" prefHeight="8.0" prefWidth="226.0" text="Load From File or Write &quot;Random #processes&quot;">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" />
            </padding>
        </VBox>
        <VBox alignment="TOP_CENTER" layoutX="391.0" layoutY="5.0" prefHeight="453.0" prefWidth="130.0" spacing="5.0">
            <children>
                <ChoiceBox fx:id="schMethod" onAction="#choiceBoxAction" prefHeight="27.0" prefWidth="129.0" />
                <VBox prefHeight="37.0" prefWidth="130.0">
                    <children>
                        <Label text="Simulation Speed: " />
                        <TextField fx:id="simSpeed" prefHeight="21.0" prefWidth="130.0" text="1" />
                    </children>
                </VBox>
                <VBox prefHeight="38.0" prefWidth="130.0" spacing="2.0">
                    <children>
                        <Label text="CS: ">
                            <tooltip>
                                <Tooltip text="Contex Switch Duration (min is 0.4)" />
                            </tooltip>
                        </Label>
                        <TextField fx:id="cs" text="0.4" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                    <children>
                        <Button fx:id="run" mnemonicParsing="false" onAction="#handleRunButtonAction" text="Run" />
                        <Button fx:id="randomInput" mnemonicParsing="false" onAction="#handleRandomInputButtonAction" text="Random Input" />
                        <Button fx:id="reloadFile" mnemonicParsing="false" onAction="#handleReloadFileButtonAction" text="Load File" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </VBox>
            </children>
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
